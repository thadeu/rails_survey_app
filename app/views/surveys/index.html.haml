= render 'tabs'

.container
  .panel
    .panel-heading
      Listing surveys

    .panel-block
      %table{class: 'table is-bordered is-hoverable is-narrow is-fullwidth'}
        %thead
          %tr
            %th Name
            %th
            %th
            %th

        %tbody
          - @surveys.each do |survey|
            %tr
              %td= survey.name
              %td= link_to 'Show', survey
              %td= link_to 'Edit', edit_survey_path(survey)
              %td= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' }
